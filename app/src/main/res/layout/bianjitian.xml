<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.baidu.mapapi.map.MapView
        android:id="@+id/bianjitianditu"
        android:layout_width="match_parent"
        android:layout_height="275dp">
    </com.baidu.mapapi.map.MapView>


    <LinearLayout
        android:layout_marginTop="31dp"
        android:layout_marginLeft="17dp"
        android:background="#EAEAEA"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="9dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/greenone" />
        <TextView

            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:text="田块名称：" />
        <EditText
            android:id="@+id/bianjitianname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="20dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="17dp"
        android:layout_marginTop="4dp"
        android:background="#EAEAEA"
        android:id="@+id/linearlayouttianmianji"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/greenone"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="13dp"
            android:text="田块面积：" />

        <TextView
            android:id="@+id/bianjitianmianji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/xiugaitwo"
            android:paddingRight="15dp"
            android:textSize="20dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="17dp"
        android:layout_marginTop="4dp"
        android:background="#EAEAEA"
        android:id="@+id/linearlayoutzhongzhiwu"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="9dp"
            android:layout_marginLeft="10dp"
            android:layout_height="9dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/greenone"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="13dp"
            android:text="种植作物：" />

        <TextView
            android:id="@+id/bianjitianzhongzhiwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/xiugaitwo"
            android:paddingRight="15dp"
            android:textSize="20dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="17dp"
        android:layout_marginTop="4dp"
        android:background="#EAEAEA"
        android:id="@+id/linearlayouttime"
        android:layout_width="325dp"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/greenone"/>
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginLeft="13dp"
            android:text="播种时间：" />

        <TextView
            android:id="@+id/bianjitiantime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/xiugaitwo"
            android:paddingRight="15dp"
            android:textSize="20dp"
            android:layout_weight="1"
           />
    </LinearLayout>

    <Button
        android:id="@+id/bianjitianbaocun"
        android:layout_width="318dp"
        android:background="@drawable/button_shape03"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:text="保存"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>
</LinearLayout>
