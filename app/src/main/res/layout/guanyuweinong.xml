<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/guanyuweinongbiaoti"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#0a8f08">

        <ImageView
            android:id="@+id/guanyuweinongbiaotiimageview_person_back"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:contentDescription="@null"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于微农"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="      微农App的宗旨是帮助使用者了解到更多的种植信息。微农App 主要包含农事笔记、土地管理和首页三大模块。用户可以通过查看农事笔记、精准天气和新闻资讯来更方便的种植。" />
    </LinearLayout>
</LinearLayout>
