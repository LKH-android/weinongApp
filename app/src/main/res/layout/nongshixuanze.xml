<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="#0a8f08"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="农事发布"
                android:textSize="21sp"
                android:layout_marginTop="35dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"/>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0">

        <LinearLayout
            android:id="@+id/qwert"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/tishione" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农事类型"
                    android:textColor="#535252"
                    android:textSize="15sp"
                    />

                <Spinner
                    android:id="@+id/spDwon"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/tishione" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="农事详情"
                    android:textColor="#535252"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                    <EditText
                        android:id="@+id/nongshiedittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="0dp"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请输入实施农事详情内容"
                        android:textColor="#000000"
                        android:paddingBottom="50dp"
                        android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/nongshiphotoRecycleListview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nongshicaozuotime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/tishione" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:text="操作时间:"
                    android:textColor="#535252"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/nongshicaozuotimetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:hint="请选择"
                    android:layout_weight="1"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_below="@+id/qwert"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/nongshiquxiao"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nongshiquxiaotext"
                    android:layout_width="72dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:background="@drawable/quxiaoone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nongshitijiao"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nongshitijiaotext"
                    android:layout_width="72dp"
                    android:layout_height="20dp"

                    android:gravity="center"
                    android:background="@drawable/tiaojiaoduihao"
                   />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
</LinearLayout>
