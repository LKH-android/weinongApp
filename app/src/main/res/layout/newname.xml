<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/xiugainamebiaoti"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="#0a8f08">

            <ImageView
                android:id="@+id/xiugainameimageview_person_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改昵称"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/xiugainamebiaoti"
            android:background="@drawable/actionsheet_bottom_normal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="新昵称"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/xiugainameedt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/actionsheet_bottom_normal"
                android:ellipsize="end"
                android:gravity="center|right"
                android:inputType="text"
                android:maxLength="10"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true" />
        </LinearLayout>
        <Button
            android:id="@+id/xiugainamequereng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_shape03"
            android:text="确定"/>
    </RelativeLayout>


</LinearLayout>
