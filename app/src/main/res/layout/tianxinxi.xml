<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e5e5e5">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="48dp"
           android:background="@drawable/back" />

        <Button
            android:id="@+id/quanditubutton"
            android:layout_width="33dp"
            android:layout_height="33dp"
           android:layout_marginLeft="315dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/map"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#e5e5e5"
            android:id="@+id/linearLayout">


    <com.baidu.mapapi.map.MapView
        android:id="@+id/tianditu"
        android:layout_width="match_parent"
        android:layout_height="248dp">
    </com.baidu.mapapi.map.MapView>


            <android.support.v7.widget.GridLayout
                android:layout_width="318dp"
                android:layout_height="160dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="20dp"
                android:background="#f6f6f6"
                app:columnCount="2"
                app:rowCount="2">

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/jiluimage"
                        android:layout_width="19dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="29dp"
                        android:background="@drawable/tianname" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="20dp"
                            android:text="田名"
                            android:textColor="#8e8e8e"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tianxingxiname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/nongzuowuimage"
                        android:layout_width="21dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="21dp"
                        android:background="@drawable/fenlei" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="20dp"
                            android:text="作物"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/nongzuowtext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mianjiimage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="24dp"
                        android:background="@drawable/mianji" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="20dp"
                            android:text="面积"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/minajitext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="157dp"
                    android:layout_height="80dp"
                    android:layout_margin="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/timeimage"
                        android:layout_width="24dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="21dp"
                        android:background="@drawable/riqi" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:layout_marginTop="20dp"
                            android:text="日期"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/timetext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.CardView
                android:layout_width="318dp"
                android:layout_height="100dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:id="@+id/nongshilinearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/nongshiimageViewland"
                        android:layout_width="68dp"
                        android:layout_height="71dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/diary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="记录条数："
                                android:textColor="#563832"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/nongshicount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#563832"
                                android:textSize="36sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="最后记录时间："
                                android:textColor="#563832"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/nongshitime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#563832"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <LinearLayout
            android:id="@+id/tianxinxibianjitian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="20dp"
          android:layout_marginLeft="56dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/bianjitian"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/tianxinxishanchutian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="20dp"
     android:layout_marginLeft="35dp"
                android:layout_marginTop="23dp"
               android:background="@drawable/shanchutian" />


        </LinearLayout>

    </LinearLayout>

        <Button
            android:id="@+id/jinongshibutton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="430dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/jinongshibutton"


            />


    </RelativeLayout>

</LinearLayout>
