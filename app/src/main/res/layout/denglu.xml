<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/denglibiaoti"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#0a8f08">

            <ImageView
                android:id="@+id/dengluimageview_person_back"
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登录"
                android:textSize="21sp"
                android:textColor="@android:color/white" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/denglunamelinearlayout"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/denglibiaoti"
            android:layout_marginTop="16dp"
            android:background="@drawable/actionsheet_bottom_normal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="用户名："
                android:textSize="16dp" />

            <EditText
                android:id="@+id/dengluname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/actionsheet_bottom_normal"
                android:ellipsize="end"
                android:gravity="center|right"
                android:inputType="text"
                android:maxLength="10"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/denglunamelinearlayout"
            android:background="@drawable/actionsheet_bottom_normal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="密     码："
                android:textSize="16dp" />

            <EditText
                android:id="@+id/denglupassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/actionsheet_bottom_normal"
                android:ellipsize="end"
                android:gravity="center|right"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true" />
        </LinearLayout>

        <Button
            android:id="@+id/denglubutton"
            android:layout_width="318dp"
            android:layout_height="40dp"
            android:layout_above="@+id/zhucebutton"
            android:background="@drawable/button_shape03"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:text="登录"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/zhucebutton"
            android:layout_width="318dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="85dp"
            android:background="@drawable/button_shape03"
            android:text="注册"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>


</LinearLayout>
